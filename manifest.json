{
  "manifest_version": 2,  
  "name": "Getting Started Example",
    "description": "Build an Extension!",
    "version": "1.0",
    "content_scripts":[{
      "matches":[
        "<all_urls>"
      ]
      ,
      "js":["content.js"]
    }],
    "browser_action": { "default_title": "Have a good day" },
    "permissions": ["activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }

    
  }
    